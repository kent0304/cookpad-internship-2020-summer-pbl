<h1>投稿一覧</h1>
<ul>
    <% @posts.each do |post| %>
        <li>
            <h3><%= post.name %> by <%= post.user.name %></h3>
            <p><%= post.description %></p>
            <%= link_to "修正する", edit_post_path(post) %>
            <%= link_to "削除する", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %>
            <%= image_tag(image_path(post.image)) %>
        </li>
    <% end %>
</ul>

<%= link_to "投稿する", new_post_path %>

