<%= form_with(model: user_form, scope: :user, url: form_url, local: true) do |form| %>
    <% if user_form.errors.any? %>
        <div id="error_explanation">
        <h2><%= user_form.errors.count %>つのエラー。この情報ではユーザー登録ができません。 </h2>

        <ul>
            <% user_form.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label "名前" %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label "パスワード" %>
        <%= form.password_field :password %>
    </div>

    <div class="field">
        <%= form.label "パスワード確認" %>
        <%= form.password_field :password_confirmation %>
    </div>

    <div class="action">
        <%= form.submit %>
    </div>


<% end %>